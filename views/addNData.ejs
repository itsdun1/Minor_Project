<% include partial/header.ejs %>
<div class="container">

    
        <div style="text-align:center">
                <h1> Enter Data </h1>
            </div>
<form action="/secret/<%=id %>/add" method="POST">
    <% for(var i=0;i<data.length ;i++){ %>
        <div style="width:30%;  margin:25px auto;">

            <div class="form-group">
            <input  type="text" name=time[i] class="form-control" placeholder="Time">
        </div>
        <div class="form-group">
        <input type="number" name=legend1[i] class="form-control" placeholder="Legend1 value"  min="0" value="0" step="0.01">
        </div>
        <div class="form-group">
        <input type="number" name=legend2[i] class="form-control" placeholder="Legend2 value" min="0" value="0" step="0.01">
        </div>
        <div class="form-group">
        <input type="number" name=legend3[i]  class="form-control" placeholder="Legend3 value" min="0" value="0" step="0.01"><br>
        </div>
        
    </div>

        <% } %>

        <div style="width:30%;  margin:25px auto;">
        <input type="hidden" name="button2" value="<%=subname %>">
        <input type="hidden" name="button" value="<%= data.length %>" >
        <input type="submit"  class="btn btn-success btn-lg" style="margin: auto"value="Submit">
        </div>
   
</form>
</div>
<% include partial/footer.ejs %>